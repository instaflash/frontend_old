root = true

# All files
[*]
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

# JavaScript files
[*.{js,ts,jsx,tsx,d.ts}]
indent_style = tab
indent_size = 4

# Bash files
[*.sh]
end_of_line = lf
indent_style = space
indent_size = 2

[{package.json,tsconfig.json,tslint.json,*.sh}]
indent_style = space
indent_size = 2
