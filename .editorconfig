[*]
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[*.{js,jsx,ts,tsx,d.ts}]
indent_style = tab
indent_size = 4

[*.sh]
end_of_line = lf
indent_style = space
indent_size = 2

[{package.json,tsconfig.json,tslint.json}]
indent_style = space
indent_size = 2

[.git{ignore,attributes,config}]
indent_style = tab
indent_size = 4
